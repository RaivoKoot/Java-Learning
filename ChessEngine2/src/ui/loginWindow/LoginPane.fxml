<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" stylesheets="@application.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.loginWindow.LoginController">
   <children>
      <Label text="Please enter your name" />
      <Label text="It will be used for Leaderboard statistics" />
      <JFXTextField fx:id="usernameField" alignment="CENTER" maxWidth="150.0" />
      <JFXButton buttonType="RAISED" onAction="#loginButtonClicked" text="Enter" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
