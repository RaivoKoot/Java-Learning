<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="1000.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.UI_Controller">
   <center>
      <ImageView fx:id="map_container" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
   </center>
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="40.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label fx:id="lbl_selected_file_name" text="selected file" />
                  <Button fx:id="btn_file_select" mnemonicParsing="false" onAction="#btn_file_select_clicked" text="Select the map..." />
                  <Button fx:id="btn_start_algorithm" mnemonicParsing="false" onAction="#btn_start_algorithm_clicked" text="Find path to city" />
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
</BorderPane>
